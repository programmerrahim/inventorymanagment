<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    tools:context=".SalesEntryActivity">

    <TextView
        android:id="@+id/txt_sales_details"
        android:text="Sales details"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/material_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/txt_line_line"
        android:layout_below="@+id/txt_sales_details"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"/>

    <View
        android:id="@+id/txt_line"
        android:layout_below="@+id/txt_line_line"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"/>

    <EditText
        android:id="@+id/sales_edit_name_Textxt"
        android:layout_below="@id/txt_line"
        android:hint="Product name"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/material_6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/sales_edit_vendor_name_Textxt"
        android:layout_below="@id/sales_edit_name_Textxt"
        android:hint="Vendor name"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/material_6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/sales_edit_quantity_Textxt"
        android:layout_below="@id/sales_edit_vendor_name_Textxt"
        android:hint="Quantity"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/material_6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sales_edit_date_Textxt"
        android:layout_below="@id/sales_edit_quantity_Textxt"
        android:hint="Select Date"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/material_6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/sales_add_button_Id"
        android:layout_below="@id/sales_edit_date_Textxt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Add Sales"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/round_round_button"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorWhite"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>