<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardElevation="15dp"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/stock_sample_productName_Id"
            android:text="Lux"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="26sp"
            android:textColor="@color/material_6"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stock_sample_quantity_Id"
            android:layout_below="@+id/stock_sample_productName_Id"
            android:text="200 pcs"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"
            android:textColor="@color/material_3"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </RelativeLayout>



</androidx.cardview.widget.CardView>